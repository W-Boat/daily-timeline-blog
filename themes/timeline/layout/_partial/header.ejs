<header class="site-header">
    <div class="container">
        <div class="header-content">
            <div class="site-branding">
                <h1 class="site-title">
                    <a href="<%= url_for() %>" class="site-title-link">
                        <%= config.title %>
                    </a>
                </h1>
                <% if (config.subtitle) { %>
                    <p class="site-subtitle"><%= config.subtitle %></p>
                <% } %>
            </div>
            
            <nav class="site-nav">
                <ul class="nav-menu">
                    <li class="nav-item">
                        <a href="<%= url_for() %>" class="nav-link <%= is_home() ? 'active' : '' %>">
                            Timeline
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="<%= url_for('archives') %>" class="nav-link <%= is_archive() ? 'active' : '' %>">
                            Archive
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</header>